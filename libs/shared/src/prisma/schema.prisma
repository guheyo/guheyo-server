datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
  schemas  = ["public", "audit"]
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "multiSchema"]
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

