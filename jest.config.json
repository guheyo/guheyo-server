{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^~content(|/.*)$": "<rootDir>/apps/content/$1",
    "^~meta(|/.*)$": "<rootDir>/apps/meta/$1",
    "^@lib(|/.*)$": "<rootDir>/libs/$1"
  },
  "roots": [
    "<rootDir>/apps/",
    "<rootDir>/libs/"
  ]
}
