{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "builder": "webpack",
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.yaml"
          }
        ]
      }
    },
    "bot": {
      "type": "application",
      "root": "apps/bot",
      "entryFile": "main",
      "sourceRoot": "apps/bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bot/tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.yaml"
          }
        ]
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "domains": {
      "type": "library",
      "root": "libs/domains",
      "entryFile": "index",
      "sourceRoot": "libs/domains/src",
      "compilerOptions": {
        "tsConfigPath": "libs/domains/tsconfig.lib.json"
      }
    }
  }
}
